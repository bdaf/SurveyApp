<%= javascript_include_tag('random_colour.js') %>
<%= form_with model: survey do |form| %>
  <div class ="change-background-after-detection">
    <%= form.label :age %><br>
    <%= form.text_field :age %>
    <% survey.errors.full_messages_for(:age).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :growth %><br>
    <%= form.text_area :growth %>
    <% survey.errors.full_messages_for(:growth).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class = "change-background-after-detection">
    <%= form.label :gender %><br>
    <%= form.text_area :gender %>
    <% survey.errors.full_messages_for(:gender).each do |message| %>
      <div class="error"><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :fav_color %><br>
    <%= form.text_area :fav_color %>
    <% survey.errors.full_messages_for(:fav_color).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>

<button id="randomColourButton" onclick="randomColour(<%= Survey::VALID_COLORS %>)">
  Random Colour
</button>